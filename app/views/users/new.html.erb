<div class="panel panel-default categories register">
 <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100 register">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h1 class="mb-4 pb-2 pb-md-0 mb-md-5">Register:</h1>
            
              <% if flash.alert %>
                <div class="alert alert-danger" role="alert">
                  <%= flash.alert %> 
                </div>
              <% end %>

            <%= form_for :user, url: '/users' do |f| %>
            <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    First Name: <%= f.text_field :first_name %>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    Last Name: <%= f.text_field :last_name %>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    Email: <%= f.text_field :email %>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    Password: <%= f.password_field :password %>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    Confirm Password: <%= f.password_field :password_confirmation %>
                  </div>
                </div>
                <div class="mt-4 pt-2 ">
                    <%= f.submit "Submit"  %>
                </div>
                    <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>