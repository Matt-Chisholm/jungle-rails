<tr>
  <td>
    <%= image_tag @items.image.tiny %>
  </td>
  <td>
    <h4><%= @items.name %></h4>
    <br>
    <p><%= @items.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol @items.price %>
  </td>
  <td>
    <%= button_to remove_item_cart_path(items_id: @items.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(items_id: @items.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td>
    <%= humanized_money_with_symbol @items.price * quantity %>
  </td>
</tr>
